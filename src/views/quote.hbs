{{> navbar}}
<div class="container mt-3">
  <img src="{{photo}}" width="250px" height="250px">
  <h1>{{author}}</h1>
  <p>{{quote}}</p>
  <div class="mt-3 d-flex gap-2">
    <a href="/quotes/{{id}}/update">
      <button class="btn btn-outline-primary btn-sm"><i class="bi bi-pencil-fill"></i></button>
    </a>
    <form action="/quotes/{{id}}/delete" method="POST">
      <button type="submit" class="btn btn-outline-danger btn-sm"><i class="bi bi-x-circle-fill"></i></button>
    </form>
  </div>
  {{> backhome}}
</div>